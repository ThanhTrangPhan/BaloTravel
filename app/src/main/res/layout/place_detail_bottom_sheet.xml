<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hồ Hoàn Kiếm"
        android:textSize="20dp"
        android:textStyle="bold"
        android:id="@+id/placeName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOSDW, HIWND, Hoàn Kiếm, Hà Nội"
        android:textSize="16dp"
        android:id="@+id/placeAddress"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="352 bài viết - 4.8/5"
        android:textSize="12dp"
        android:id="@+id/placeMore"/>

    <ImageView
        android:id="@+id/bannerView"
        android:layout_width="wrap_content"
        android:layout_height="251dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:baselineAlignBottom="false"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/imageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/uploadedPictureLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:orientation="horizontal">
                </LinearLayout>


                <ImageButton
                    android:id="@+id/uploadButton"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="83dp"
                    android:layout_toEndOf="@+id/uploadedPictureLayout"
                    android:layout_weight="1"
                    android:baselineAlignBottom="true"
                    android:contentDescription="Thêm ảnh mới"
                    app:srcCompat="@android:drawable/ic_menu_gallery" />

            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/addToPlaceListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm điểm đến này" />

</LinearLayout>